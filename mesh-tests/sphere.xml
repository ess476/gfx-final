<scenefile>
    <globaldata>
        <diffusecoeff v="1.0"/>
        <specularcoeff v="0.5"/>
        <ambientcoeff v="0.5"/>
    </globaldata>

	<lightdata>
		<id v="0"/>
		<color r="1" g="1" b="1"/>
		<function v1="0" v2="0.5" v3="0"/>
		<type v="directional"/>
		<direction x="0" y="-1" z="0"/>
	</lightdata>

    <cameradata>
        <pos x="0" y="0" z="5"/>
        <focus x="0" y="0" z="-1"/>
        <up x="0" y="1" z="0"/>
        <heightangle v="45"/>
    </cameradata>

    <object type="tree" name="root">
        <transblock>
            <translate x="0" y="-12" z="0" />
            <scale x="20" y="20" z="20" />
            <object type="primitive" name="cube">
                <diffuse r="1" g="1" b="1" />
            </object>
        </transblock>
        <transblock>           
            <scale x="3.0" y="3.0" z="3.0" />
            <object type="primitive" name="mesh" meshfile="example-meshes/sphere.mesh">
                <diffuse r="1" g="1" b="1"/>
            </object>
        </transblock>
    </object>

</scenefile>
