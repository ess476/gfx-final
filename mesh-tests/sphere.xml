<scenefile>
    <globaldata>
        <diffusecoeff v="1.0"/>
        <specularcoeff v="0.5"/>
        <ambientcoeff v="0.5"/>
    </globaldata>

	<lightdata>
		<id v="0"/>
		<color r="1" g="1" b="1"/>
		<function v1="0" v2="0" v3="0"/>
		<type v="directional"/>
		<direction x="0" y="-1" z="0"/>
	</lightdata>

	<lightdata>
		<id v="1"/>
		<color r="1" g="1" b="1"/>
		<function v1="0" v2="0" v3="0"/>
		<type v="directional"/>
		<direction x="1" y="-1" z="0"/>
	</lightdata>

	<lightdata>
		<id v="2"/>
		<color r="0.25" g="0.25" b="0.25"/>
		<function v1="0" v2="0" v3="0"/>
		<type v="point"/>
		<position x="2.5" y="2.5" z="-2.5"/>
	</lightdata>

    <cameradata>
        <pos x="0" y="0" z="5"/>
        <focus x="0" y="0" z="-1"/>
        <up x="0" y="0.5" z="0"/>
        <heightangle v="45"/>
    </cameradata>

    <object type="tree" name="root">
        <transblock>
            <translate x="0" y="-12" z="0" />
            <scale x="20" y="20" z="20" />
            <object type="primitive" name="cube">
                <diffuse r="0.8" g="0.8" b="0.8" />
            </object>
        </transblock>
        <transblock>           
            <scale x="1.75" y="1.75" z="1.75" />
            <object type="primitive" name="mesh" meshfile="example-meshes/sphere.mesh">
                <diffuse r="1" g="1" b="1"/>
            </object>
        </transblock>
        <transblock>           
            <scale x="2.0" y="2.0" z="2.0" />
	    <translate x="5.0" y="0" z="0" />
            <object type="primitive" name="mesh" meshfile="example-meshes/sphere.mesh">
                <diffuse r="1" g="1" b="1"/>
            </object>
        </transblock>
        <transblock>           
            <scale x="2.0" y="2.0" z="2.0" />
	    <translate x="-5.0" y="0" z="0" />
            <object type="primitive" name="mesh" meshfile="example-meshes/sphere.mesh">
                <diffuse r="1" g="1" b="1"/>
            </object>
        </transblock>
        <transblock>           
            <scale x="2.0" y="2.0" z="2.0" />
	    <translate x="7" y="0" z="0" />
            <object type="primitive" name="mesh" meshfile="example-meshes/sphere.mesh">
                <diffuse r="1" g="1" b="1"/>
            </object>
        </transblock>
    </object>

</scenefile>
